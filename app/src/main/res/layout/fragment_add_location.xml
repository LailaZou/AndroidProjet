<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLocation">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/label"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/description"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Label" />

    <EditText
        android:id="@+id/description"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/point_interet"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Description" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/point_interet"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:text="next" />

    <Spinner
        android:id="@+id/point_interet"
        android:layout_width="299dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dialog" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/label"
        android:layout_marginBottom="194dp"
        android:text="Point d'interet" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/addlocation" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Adding a location" />


</RelativeLayout>